<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="14.5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/mode_word"
        android:layout_height="72dp"
        android:layout_width="fill_parent"
        android:fontFamily="serif"
        android:layout_marginBottom="7dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mode_word" />

    <Button
        android:id="@+id/mode_translation"
        android:layout_height="72dp"
        android:layout_width="fill_parent"
        android:fontFamily="serif"
        android:layout_marginBottom="7dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mode_translation" />

    <Button
        android:id="@+id/mode_word_to_translation"
        android:layout_height="72dp"
        android:layout_width="fill_parent"
        android:layout_marginBottom="7dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mode_word_to_translation" />

    <Button
        android:id="@+id/mode_translation_to_word"
        android:layout_height="72dp"
        android:layout_width="fill_parent"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mode_translation_to_word" />
</LinearLayout>